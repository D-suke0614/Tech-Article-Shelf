// Prisma Schema for Tech Article Shelf

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Article {
  id          String   @id @default(cuid())
  url         String   @unique
  title       String
  description String?
  isRead      Boolean  @default(false)
  isFavorite  Boolean  @default(false)
  tags        Tag[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("articles")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  articles Article[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tags")
}
